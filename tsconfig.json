{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@app/*": ["app/*"],
      "@domain/*": ["domain/*"],
      "@presentation/*": ["presentation/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
